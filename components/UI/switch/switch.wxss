.t-switch-checked{
  background: #0052D9;
}
.t-switch-dot-checked{
  left: calc(90rpx - 44rpx - 6rpx);
}
.t-switch-dot-text{
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.26);
}


.t-switch-dot-medium{
  width: 22px;
  height: 22px;
}
.t-switch-dot-medium-checked{
  left: calc(90rpx - 44rpx - 6rpx);
}

.t-switch-dot-text-checked{
  color: #0052D9;
}
t-switch-dot-large{
  width: 26px;
  height: 26px;
}
/* .t-switch-small{
