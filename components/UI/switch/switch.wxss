} */
.t-switch-dot-small{
  width: 18px;
  height: 18px;
}

.t-switch-dot-small-checked{
  left: calc(90rpx - 39rpx - 18rpx);
}

.t-switch-large{
  width: 52px;
  height: 32px;
}
.t-switch-dot-large{
  width: 26px;
  height: 26px;
}

.t-switch-dot-large-checked{
  left: calc(90rpx - 50rpx);
}
.t-switch-disable{
  opacity: 0.6;
}



