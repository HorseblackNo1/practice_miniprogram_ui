/* components/UI/switch/switch.wxss */
.t-switch{
  background:rgba(0,0,0,0.26);
  border-radius: 50px;
  position: relative;
  transition: all 0.3s ease;
  overflow: hidden;
}

.t-switch-small{
  width: 39px;
  height: 24px;
}
.t-switch-medium{
  width: 90rpx;
  height: 56rpx;
}

.t-switch-large{
  width: 52px;
  height: 32px;
}

.t-switch-dot{
  position: absolute;
  left: 6rpx;
  top: 50%;
  border-radius: 100%;
  background: #fff;
  transform: translateY(-50%);
  transition: all 0.3s ease;
  text-align: center;
  line-height: 44rpx;
}

