/* components/UI/drawer/drawer.wxss */
.t-drawer-container{
  overflow: hidden;
}
.t-drawer{
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.6);
    z-index: 9999999999999999;
    transform: all 0.3;
    z-index: 999;
}
.t-drawer_left{
  float: left;
  width: 70%;
  margin-left: 0;
  padding: 20rpx;
  box-sizing: border-box;
  height: 100vh;
  background: #fff;
  animation: t-left-show 0.3s;
}
@keyframes t-left-show{
  from{
    margin-left: -70%;
  }
  to{
    margin-left:0;
  }
}

.t-drawer_right{
  float: right;
  width: 70%;
  margin-right: 0;
  height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  background: #fff;
  animation: t-right-show 0.3s;
}
@keyframes t-right-show{
  from{
    margin-right: -70%;
  }
  to{
    margin-right:0;
  }
}

.t-drawer-sidebar{
  height: 80%;
  overflow: hidden;
  overflow-y: auto;
}
.t-drawer-sidebar-item{
  padding: 30rpx 0;
  font-size: 32rpx;
  color: #333;
  border-bottom: 1px solid rgb(204, 204, 204);
}
.t-drawer-sidebar-title{
  font-size: 48rpx;
  font-weight: bold;
}